<h1>Pokemons</h1>
<div class="container">
  <div class="card-columns">
    <% @pokemons.each do |pokemon| %>
    <div class="card" style="width: 18rem;">
      <h5 class="card-title text-center"><%= pokemon.name %></h5>

      <div class="card-body">
        <% if pokemon.photo.attached?%>
        <%= cl_image_tag pokemon.photo.key, class:"card-img-top" %>
        <%end%>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Element : <%= pokemon.element %></li>
        <li class="list-group-item">Attack Points : <%= pokemon.attack %></li>
        <li class="list-group-item">Life Points : <%= pokemon.life %></li>
        <li class="list-group-item">Location : <%= pokemon.location %></li>
      </ul>
      <div class="card-body">
        <%= link_to 'Show', pokemon , class: 'btn btn-primary' %>
      </div>
    </div>
    <% end %>
  </div>
  <div id="map" style="width: 100%; height: 600px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>