<h1>Battle</h1>
<div class="container" style="display: flex; justify-content: space-between; margin-top: 40px">
  <div class="container">
    <h4>My Army</h4>
    <% @pokemons.each do |pokemon| %>
    <div class="card clickable" style="width: 10rem;">
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= cl_image_tag pokemon.photo.key, class:"card-img-top" %></li>
      </ul>
    </div>
    <% end %>
  </div>

  <div class="container">
    <h4>Oponent Choice</h4>
    <div class="card" style="width: 10rem;">
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= cl_image_tag @oponent.photo.key, class:"card-img-top" %></li>
      </ul>
    </div>
  </div>
  <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#exampleModalCenter">
    Start Fight
  </button>

  <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title text-center" id="exampleModalLongTitle">THE WINNER IS</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <% if @oponent.attack > @pokemons.first.attack %>
          <%= cl_image_tag @oponent.photo.key, class:"card-img-top" %>
          <% else %>
          <%= cl_image_tag @pokemons.first.photo.key, class:"card-img-top" %>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-dark" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>