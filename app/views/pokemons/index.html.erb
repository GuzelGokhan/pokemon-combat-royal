<p id="notice"><%= notice %></p>

<h1>Pokemons</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Element</th>
      <th>Life</th>
      <th>Attack</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pokemons.each do |pokemon| %>
    <tr>

      <td><%= pokemon.name %></td>
      <td><%= pokemon.location %></td>
      <td><%= pokemon.element %></td>
      <td><%= pokemon.life %></td>
      <td><%= pokemon.attack %></td>
      <td><%= link_to 'Show', pokemon, class: 'btn btn-primary'  %></td>
      <td><%= link_to 'Edit', edit_pokemon_path(pokemon), class: 'btn btn-primary'  %></td>
      <td><%= link_to 'Destroy', pokemon, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary'  %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pokemon', new_pokemon_path, class: 'btn btn-primary' %>